<div class="d-block container d-md-flex align-items-center justify-content-center">
  <div>
    <h2 class="mb-3 text-success">Sign up</h2>

    <%= form_for(resource, as: resource_name, html: {class:"form"}, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3 d-block d-md-flex">
      <div class="form-group">
        <%= f.label :full_name, class: "text-success" %><br />
        <%= f.text_field :full_name, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>

      <div class="form-group m-0 mx-md-4">
        <%= f.label :email, class: "text-success" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>

     <div class="mb-3 d-block d-md-flex">
      <div class="form-group">
        <%= f.label :password, class: "text-success" %>
        <% if @minimum_password_length %>
        <em class = "text-success"> (<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="form-group mx-0 mx-md-4">
        <%= f.label :password_confirmation, class: "text-success" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>

    </div>

    <div class="mb-3 d-block d-md-flex">
      <div  class="form-group">
        <%= f.label :gender, class: "text-success" %><br />
        <%= f.select :gender, [["Male", "Male"], ["Female", "Female"]], { },  class: "form-select" %>
      </div>

      <div  class="form-group mx-0 mx-md-4">
        <%= f.label :date_of_birth, class: "text-success" %><br />
        <%= f.date_field :date_of_birth, class:"form-control", id:"exampleFormControlInput2" %>
      </div>

       <div class="form-group">
        <%= f.label :role, class: "text-success" %><br />
        <%= f.select :role, options_for_select([["isLead", "is Lead"], ["NotLead", "Not Lead"]] )%>
      </div>
    </div>

    <div class="actions mb-3">
      <%= f.submit "Register", class: "btn btn-success" %>
    </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
  <div class="w-40 h-50 ml-2 d-none d-md-block">
    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
    class="img-fluid" alt="Sample image">
  </div>
</div>
