<div class="w-90 m-auto">
    <div class="d-flex justify-content-between">
        <h1 class="text-success mb-4">Created Task</h1>

        <div class="d-flex">
            <%= link_to "Create Task", new_task_path, class: "btn btn-success create-button" %>
        </div>
    </div>

    <form class="form w-40 mb-4">
        <div class="form-group d-flex">
            <input type="text" name="title_search" placeholder="Enter the title you want to search" class="form-control me-1", value= "<%= @search_by_title %>">
            <input type="submit" class="btn btn-success ms-2" value="search">
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="text-center bg-success text-white">Title</th>
                <th scope="col" class="text-center bg-success text-white">Description</th>
                <th scope="col" class="text-center bg-success text-white">Date</th>
                <th scope="col" class="text-center bg-success text-white">status</th>
                <th scope="col" class="text-center bg-success text-white">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @tasksCreated.each do | task |  %>
            <tr>
                <td class="text-center"><%= link_to task.title, task, class:"text-dark text-decoration-none" %></td>
                <td class="text-center" title="<%= task.description %>"><%= task.description[0..30] %></td>
                <td class="text-center"><%= task.due_date %></td>
                <td class="text-center"><%= task.status %></td>
                <td class="d-inline-flex w-100 justify-content-evenly align-item-center">
                    <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-success" %>
                    <%= link_to "Delete", task_path(task), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete?"
                  }, class: "btn btn-sm btn-danger" %>
                  
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>