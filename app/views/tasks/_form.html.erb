 <div class="card-body">
    <%= form_with model: task do |form| %>

        <div class="form-group mb-4">
            <%= form.label :title, for: "exampleFormControlInput1" %>
            <%= form.text_field :title, class:"form-control", id:"exampleFormControlInput1", placeholder: "Title must between 5 to 20 characters long" %>
        </div>

        <div class="form-group mb-4">
            <label for="exampleFormControlInput2">Description</label>
            <%= form.text_area :description, class:"form-control", id:"exampleFormControlInput2", placeholder: "Title must between 5 to 20 characters long" %>
        </div>

        <div class="form-group mb-4">
            <label for="exampleFormControlInput2">Due date</label>
            <%= form.date_field :due_date, class:"form-control" %>
        </div>


        <div class="visibilty-hidden" >    
            <% if task.status == "Completed"%>         
                <%= form.select :status, [["Completed", "Completed"], ["In Progress", "In Progress"]], selected: "Completed" %>
            <% else %>
                <%= form.select :status, [["Completed", "Completed"], ["In Progress", "In Progress"]], selected: "In Progress" %>
            <% end %>
        </div>

        <%= form.number_field :user_id, value: current_user.id , type:"hidden" %>

        <div class="form-group mb-4 text-end">
            <%= link_to "Back", :back, class: "btn btn-outline-success" %>
            <%= form.submit class: "btn btn-success"%>
        </div>


    <% end %>
    </div>